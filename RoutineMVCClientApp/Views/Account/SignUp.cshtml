@model DomainRoutineApp.Models.Requests.Account.SignUpRequestModel

@{
    Layout = "_Layout";

}

@{
    if (ViewBag.Errors.Count == 0)
    {

        if (ViewBag.UserCreated)
        {

            <script>
                Swal.fire(
                  'You have created an new account',
                  'Now you need to confirm your email',
                  'success'
                )
            </script>
        }

    }
    else
    {
        <script>
            console.log(@ViewBag.Errors[0]);
        </script>


        <script>
            Swal.fire({
              title: '<strong>HTML <u>example</u></strong>',
              icon: 'info',
              html:
                'You can use <b>bold text</b>, ' +
                '<a href="//sweetalert2.github.io">links</a> ' +
                'and other HTML tags',
              showCloseButton: true,
              showCancelButton: true,
              focusConfirm: false,
              confirmButtonText: '<i class="fa fa-thumbs-up"></i> Great!',
              confirmButtonAriaLabel: 'Thumbs up, great!',
              cancelButtonText: '<i class="fa fa-thumbs-down"></i>',
              cancelButtonAriaLabel: 'Thumbs down'
            })
        </script>


        <div class="alert alert-danger" role="alert">
            <ul>
                @foreach (var error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }
}


<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#5c1794" fill-opacity="1" d="M0,96L60,117.3C120,139,240,181,360,186.7C480,192,600,160,720,160C840,160,960,192,1080,192C1200,192,1320,160,1380,144L1440,128L1440,0L1380,0C1320,0,1200,0,1080,0C960,0,840,0,720,0C600,0,480,0,360,0C240,0,120,0,60,0L0,0Z"></path></svg>

<div class="container form-container bg-dark">
    <div class="row">

        <div class="form col-6">

            <h1 class="text-white">Create an account</h1>



            <form method="post" asp-action="SignUp" class="mt-5">

                <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>

                <div class="form-group mb-4">
                    <label asp-for="FirstName" class="control-label text-white"></label>
                    <input asp-for="FirstName" class="form-control bg-dark text-white" placeholder="First Name">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>


                <div class="form-group mb-4">
                    <label asp-for="LastName" class="control-label text-white"></label>
                    <input asp-for="LastName" class="form-control bg-dark text-white" placeholder="Last Name">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>


                <div class="form-group mb-4">
                    <label asp-for="Age" class="control-label text-white"></label>
                    <input asp-for="Age" class="form-control bg-dark text-white" placeholder="Age">
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>


                <div class="form-group mb-4">
                    <label asp-for="Email" class="control-label text-white"></label>
                    <input asp-for="Email" class="form-control bg-dark text-white" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>


                <div class="form-group mb-4">
                    <label asp-for="Password" class="control-label text-white"></label>
                    <input asp-for="Password" class="form-control bg-dark text-white" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>



                <div class="form-group mb-4">
                    <label asp-for="ConfirmPassword" class="control-label text-white"></label>
                    <input asp-for="ConfirmPassword" class="form-control bg-dark text-white" placeholder="Confirm Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <button class="btn-fill-animation mt-4 rounded" type="submit">Sign Up</button>
                </div>

            </form>

        </div>

        <div class="col-6">
            <img class="fluid" src="~/images/ManDoingExerciseAndWithAPhone.png" />
        </div>

    </div>
</div>

