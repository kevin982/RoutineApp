@inject MVCRoutineAppClient.Services.IExerciseService _exerciseService;

@{
	ViewData["Title"] = "Create Routine";
	Layout = "_Layout";
}

<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#5c1794" fill-opacity="1" d="M0,96L60,117.3C120,139,240,181,360,186.7C480,192,600,160,720,160C840,160,960,192,1080,192C1200,192,1320,160,1380,144L1440,128L1440,0L1380,0C1320,0,1200,0,1080,0C960,0,840,0,720,0C600,0,480,0,360,0C240,0,120,0,60,0L0,0Z"></path></svg>



<div class="container">
	<div class="row">


		<div class="col-6 pt-5">

			<h1 class="text-white mb-3">Choose the exercises</h1>

			<hr class="bg-white" />

			<label class="text-white mt-5">Category</label>

			<select class="form-select bg-dark text-white mt-2" aria-label="Default select example" id="categoryCombo">
 
			</select>

			<label class="text-white mt-3">Size</label>
			<select class="form-select bg-dark text-white mt-2" aria-label="Default select example" id="size">
				@for (int i = 5; i <= 10; i += 5)
				{
					<option value="@i">@i</option>
				}
			</select>

		</div>

		<div class="col-6 pb-5">
			<img src="~/Images/WomanRunningOnPhone.png" />
		</div>

	</div>
</div>


<div class="container">
	<hr class="bg-white" />
</div>

<div class="container mt-5" id="exercisesContainer">
	
</div>

<div class="container">
	<div class="row">
		<div class="col-md-4">
				<div class="row justify-content-start">
					<button id="btnPrevious"><i class="bi bi-arrow-left-circle-fill"></i></button>
				</div>
		</div>
		<div class="col-md-4 justify-content-center">
			<div class="row justify-content-center">
				<p id="index" class="text-white text-center"></p>	
			</div>
		</div>
		<div class="col-md-4 justify-content-end">
			<div class="row justify-content-end">
				<button id="btnNext"><i class="bi bi-arrow-right-circle-fill"></i></button>
			</div>
		</div>
	
	</div>
	
</div>

