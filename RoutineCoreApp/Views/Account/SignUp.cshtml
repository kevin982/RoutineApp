@model DomainRoutineApp.Models.Requests.Account.SignUpRequestModel

@{
    Layout = "_Layout";

}
 
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <!--Made with love by Mutiullah Samim -->
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="/css/SignUp.css">
</head>
<body>

    <h4>Create an account!</h4>
    <hr />
    @{
        if (ViewBag.Errors.Count == 0)
        {

            if (ViewBag.UserCreated)
            {
                <div class="alert alert-success" role="alert">
                    We have sent you an email to your email address, please confirm go and see it!
                </div>
            }


        }
        else
        {
            <div class="alert alert-danger" role="alert">
                <ul>
                    @foreach (var error in ViewBag.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }
    }


    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Sign In</h3>
                    <div class="d-flex justify-content-end social_icon">
                        <span><i class="fab fa-facebook-square"></i></span>
                        <span><i class="fab fa-google-plus-square"></i></span>
                        <span><i class="fab fa-twitter-square"></i></span>
                    </div>
                </div>
                <div class="card-body">
                    <form>
                        <div class="input-group form-group">
 
                            <input asp-for="FistName" class="form-control" placeholder="First name" />
                            <span asp-validation-for="FistName" class="text-danger"></span>

                        </div>

                        <div class="input-group form-group">
 
                            <input asp-for="LastName" class="form-control" placeholder="Last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>

                        </div>

                        <div class="input-group form-group">
 
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>

                        <div class="input-group form-group">
 
                            <input asp-for="Age" class="form-control" placeholder="Age" />
                            <span asp-validation-for="Age" class="text-danger"></span>

                        </div>

                        <div class="input-group form-group">
 
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>

                        <div class="input-group form-group">
 
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Password again" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                        </div>


                        <div class="form-group">
                            <input type="submit" value="Login" class="btn float-right login_btn">
                        </div>
                    </form>

                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Do you already have an account?<a asp-action="SignIn">Sign In</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a asp-action="SendEmailToResetPassword">Forgot your password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>